{% extends 'base.html.twig' %}
{% block title "Voir tous nos bien" %}
{% block body %}
    <div class="container mt-4">
        <h1> Voici nos biens ci-dessous :</h1>

        <div class="jumbotron">
            <div class="container">
                {{ form_start(form) }}
                <div class="form-row">
                    <div class="col">
                        {{ form_row(form.minSurface) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.maxPrice) }}
                    </div>
                    <div class="col">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="row">
            {%  for property in properties %}
                <div class="col-md-4">
                    {%  include 'property/_property.html.twig' %}
                </div>
            {% endfor %}
        </div>
        <div class="pagination">
            {{ knp_pagination_render(properties) }}
        </div>
    </div>

{% endblock %}
