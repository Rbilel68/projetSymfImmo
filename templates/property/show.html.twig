{% extends 'base.html.twig' %}


{% block body %}
    <title>{% block title %} {{ property.title }}{% endblock %}</title>
    <div class="jumbotron">
        <div class="container">

            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">

                    <h1>{{ property.title }}</h1>
                    <h2>{{ property.rooms }} pièces - {{ property.surface }} m²</h2>
                    <div class="text-primary" style="font-size: 4rem; font-weight: bold;">{{ property.getFormattedPrice }} €</div>
                    <a href="#" class="btn btn-primary">Contacter L'agence</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">

        <p>
            {{ property.description | nl2br }}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Caracteristique</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable</td>
                        <td> {{ property.surface }} m2</td>
                    </tr>
                    <tr>
                        <td>Pièce</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Chambres</td>
                        <td>Chambres{{  property.bedrooms }}</td>
                    </tr>
                    <tr>
                        <td>Etage</td>
                        <td>{{ property.floor }}</td>
                    </tr>
                    <tr>
                        <td>Chauffage</td>
                        <td>{{ property.heatType }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
            <h2>Spécificités</h2>
            </div>
        </div>
    </div>
{% endblock %}
